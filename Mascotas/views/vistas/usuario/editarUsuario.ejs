    <h1 class="text-center">Editar Usuario - <%= usuarioAEditar.nombres%></h1>

    <div class="row">
        <div class="col-lg-5">
            <form action="/Usuario/EditarUsuario" method="post">
                <div class="form-group">
                    <label for="nombres">Nombres</label>
                    <input type="text" class="form-control" id="nombres" placeholder="Ingrese sus Nombres" name="nombres" value="<%= usuarioAEditar.nombres %>">
                </div>
                <div class="form-group">
                    <label for="apellidos">Apellidos</label>
                    <input type="text" class="form-control" id="apellidos" placeholder="Ingrese sus Apellidos" name="apellidos" value="<%= usuarioAEditar.apellidos %>">
                </div>
                <div class="form-group">
                    <label for="correo">Correo</label>
                    <input type="email" class="form-control" id="correo" placeholder="Ingrese su Correo" name="correo" value="<%= usuarioAEditar.correo %>">
                </div>
                <div class="form-group">
                    <label for="correo">Password</label>
                    <input type="password" class="form-control" id="password" placeholder="Ingrese su Password" name="password">
                </div>
                <div class="form-group">
                    <input type="hidden" class="form-control" id="idusuario" name="id" value="<%= usuarioAEditar.id %>">
                </div>
                <button type="submit" class="btn btn-success btn-block">Editar Usuario</button>
            </form>
        </div>
        <div class="col-lg-2"></div>
        <div class="col-lg-5 text-center">
            <h2><%= usuarioAEditar.nombres %></h2>
            <h4><%= usuarioAEditar.apellidos %></h4>
            <h5><%= usuarioAEditar.correo %></h5>
        </div>
    </div>