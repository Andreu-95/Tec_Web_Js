<h1 class="text-center">Editar Raza - <%= razaAEditar.nombre %></h1>
<div class="row">
  <div class="col-lg-5">
    <form action="/Raza/EditarRaza" method="post">
      <div class="form-group">
        <label for="nombre">Nombre</label>
        <input type="text" class="form-control" id="nombre" placeholder="Ingrese el nombre de la raza" name="nombre">
      </div>
      <div class="form-group">
        <input type="hidden" class="form-control" id="idraza" name="id" value="<%= razaAEditar.id %>">
      </div>
      <button type="submit" class="btn btn-success">Editar Raza</button>
    </form>
  </div>
  <div class="col-lg-2"></div>
  <div class="col-lg-5 text-center">
    <h2><%= razaAEditar.nombre %></h2>
  </div>
</div>
