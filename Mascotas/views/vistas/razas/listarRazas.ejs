<h1>Lista de Razas</h1>
<div class="row">
  <div class="col-sm-9"></div>
  <div class="col-sm-3">
    <a href="/CrearRaza" class="btn btn-block btn-success">
      Crear Raza
    </a>
  </div>
</div>
<br>

<table class="table table-responsive">
  <tr>
    <th>Nombre</th>
    <th>Editar</th>
    <th>Borrar</th>
  </tr>
  <% for (var i=0; i<razas.length; i++) { %>
  <tr>
    <td><%= razas[i].nombre %></td>
    <td>
      <a href="/EditarRaza?id=<%= razas[i].id %>" class="btn btn-info btn-block">Editar</a>
    </td>
    <td>
      <a href="/Raza/BorrarRaza?id=<%= razas[i].id %>" class="btn btn-danger btn-block">X</a>
    </td>
  </tr>
  <% } %>
</table>
