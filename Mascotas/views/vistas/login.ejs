<div class="row">
    <div class="col-lg-4"></div>
    <div class="col-lg-4">
        <h1>Login</h1>
        <form action="/Auth/Login" method="post">
            <div class="form-group">
                <label for="nombres">Correo</label>
                <input type="email" class="form-control" id="correo" placeholder="Ingrese su Correo" name="correo">
            </div>
            <div class="form-group">
                <label for="apellidos">Password</label>
                <input type="password" class="form-control" id="password" placeholder="Ingrese su Password" name="password">
            </div>
            <button type="submit" class="btn btn-success btn-block">Ingresar</button>
        </form>
    </div>
    <div class="col-lg-4"></div>
</div>